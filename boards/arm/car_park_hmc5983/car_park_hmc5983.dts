/dts-v1/;
#include <st/f0/stm32f030X8.dtsi>

/ {
	model = "STMicroelectronics STM32F030R8-NUCLEO board";
	compatible = "st,stm32f030r8-nucleo", "st,stm32f030";

	chosen {
		zephyr,console = &usart2;
		zephyr,shell-uart = &usart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		green_led_2: led_2 {
			gpios = <&gpioa 8 GPIO_INT_ACTIVE_LOW>;
			label = "User LD2";
		};
		green_led_1: led_1 {
			gpios = <&gpiob 15 GPIO_INT_ACTIVE_LOW>;
			label = "User LD1";
		};
	};
/*
	gpio_keys {
		compatible = "gpio-keys";
		user_button1: button1 {
			label = "User1";
			gpios = <&gpiof 7 GPIO_INT_ACTIVE_LOW>;
		};
		user_button2: button2 {
			label = "User2";
			gpios = <&gpiof 6 GPIO_INT_ACTIVE_LOW>;
		};
		motor_key1: key1 {
			label = "Motor1";
			gpios = <&gpioa 1 GPIO_INT_ACTIVE_LOW>;
