*/
	aliases {
		led0 = &green_led_2;
		led1 = &green_led_1;
		/*
		sw0 = &user_button1;
		sw1 = &user_button2;
		sw2 = &motor_key1;
		sw3 = &motor_key2;
		*/
	};
};

&usart1 {
	current-speed = <115200>;
	pinctrl-0 = <&usart1_pins_b>;
	pinctrl-names = "default";
	status = "ok";
};

&usart2 {
	current-speed = <115200>;
	pinctrl-0 = <&usart2_pins_a>;
	pinctrl-names = "default";
	status = "ok";
};

